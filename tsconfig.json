{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["ES2016", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
